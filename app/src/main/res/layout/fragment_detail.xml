<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:padding="5dp"
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:id="@+id/image_poster"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                    android:layout_height="wrap_content">
                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/movie_name"
                            android:textSize="20sp"
                            tools:text="Name"
                            android:maxLines="2"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp"


                            android:textColor="@color/header"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rating"
                            tools:text="Rating"

                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:maxLines="2"
                            android:textSize="18sp"
                            android:textColor="@color/detail"


                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/runtime"
                            tools:text="Runtime"
                            android:textSize="18sp"


                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:maxLines="2"

                            android:textColor="@color/detail"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/genres"
                            tools:text="genres"
                            android:textSize="18sp"

                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/detail"

                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_gravity="center"

                            android:paddingTop="20dp"
                            >

                            <Button

                                android:id="@+id/web_button"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:text="GO TO WEBSITE"
                                />



                        </LinearLayout>



            </LinearLayout>



        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/detail"
            android:text="Description:"
            android:paddingLeft="25dp"
            android:paddingTop="25dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/header"
            android:id="@+id/description"
            tools:text="An ambitious young executive is sent to retrieve his company's CEO from an idyllic but mysterious  at a remote location in the Swiss Alps but soon suspects that the spa's miraculous treatments are not what they seem."

            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_gravity="center_vertical|right"
            android:gravity="left"



            />

        <TextView
            android:paddingTop="25dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"


            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SHOWTIME"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvDetail"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:padding="25dp"
            >


        </android.support.v7.widget.RecyclerView>

        <TextView
            android:padding="25dp"
            android:id="@+id/no_show"
            android:gravity="center"
            android:textColor="@color/detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No Showing Available"
            android:visibility="gone"
            />
    </LinearLayout>
</ScrollView>